  "type": "commonjs",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "quoted-printable": "^1.0.1",
    "utf8": "^3.0.0",
    "webdriverio": "^9.18.4"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cheerio": "^0.22.35",
    "@types/quoted-printable": "^1.0.2",
    "@types/utf8": "^3.0.3",
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/appium-service": "^9.18.4",
    "@wdio/cli": "^9.18.4",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.19.2",
    "@wdio/types": "^9.16.2",
    "allure-commandline": "^2.34.1",
    "appium": "^2.19.0",
    "appium-uiautomator2-driver": "^4.2.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "wdio-video-reporter": "^6.1.1"
  }
}
