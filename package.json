{
  "name": "appium-js-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "ts-node src/utils/clean-allure.ts",
    "test": "npx wdio run wdio.conf.ts --tsconfig tsconfig.json",
    "posttest": "allure generate allure-results --clean -o allure-report",
    "appium": "appium --address 0.0.0.0 --port ${APPIUM_PORT:-4724} --relaxed-security",
    "allure:clean": "rimraf allure-results allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:local": "npm run allure:clean && (npm run test || true) && npm run allure:generate && npm run allure:open",
    "test:ci": "npm run allure:clean && npm run test && npm run allure:generate"
  },
  "keywords": [],
